<head>
  <style>
    body {
      background-color: black;
      color: white;
    }

    h3 {
      margin-top: 20px;
    }

    h3 a {
      text-decoration: none;
    }
  </style>
</head>

<body>
  <% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
  <%}%>
  <h1>Register As Recruiter</h1>
  <h3>Already have an account Login &nbsp;<a href="./login">Login Now</a></h3>
  <form action="/register" method="post" class="p-5">
    <div class="form-group">
      <label class="mb-2 ps-1" for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control mb-4"
        id="name"
        aria-describedby="nameHelp"
        placeholder="Enter Your Name"
      />
    </div>
    <div class="form-group">
      <label class="mb-2 ps-1" for="email">Email</label>
      <input
        name="email"
        type="email"
        class="form-control mb-4"
        id="email"
        aria-describedby="emailHelp"
        placeholder="Enter Your Email"
      />
    </div>
    <div class="form-group">
      <label class="mb-2 ps-1" for="password">Password</label>
      <input
        type="password"
        name="password"
        class="form-control mb-4"
        id="password"
        aria-describedby="passwordHelp"
        placeholder="Enter Your Password"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Register</button>
  </form>
</body>
