<head>
  <style>
    body {
      background-color: rgb(0, 0, 0);
      color: rgb(0, 0, 0);
    }
    .hero {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 180px;
    }
    .cards {
      background-color: rgb(146, 74, 228);
      width: 250px;
      border-radius: 30px;
    }
    .cards > h1 {
      padding-top: 25px;
      text-align: center;
    }
    .card-content {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      margin-top: 15px;
      margin-left: 30px;
    }
    p {
      font-weight: 400;
    }
    p > span {
      font-size: 1rem;
      font-weight: 700;
    }
    .btn1 {
      background-color: rgb(150, 255, 90);
      border-radius: 20px;
      border: none;
      margin-bottom: 20px;
      margin-left: 30px;
    }
    .btn1 a {
      text-decoration: none;
      color: black;
      font-size: 1rem;
      font-weight: 700;
      padding: 10px 20px;
      display: inline-block;
    }
  </style>
</head>
<body>
  <% if(job){%>
  <div class="hero">
    <div class="cards">
      <h1><%= job.jobdesignation %> at <%= job.companyname %></h1>
      <div class="card-content">
        <div>
          <p><span>Location :</span> <%= job.joblocation %></p>
          <p><span>Salary :</span> <%= job.salary %></p>
          <p>
            <span>Apply by :</span> <%= new
            Date(job.deadline).toLocaleDateString() %>
          </p>

          <p>
            <span>Skills Required :</span>
            <% if (job && job.skills) { %> <% job.skills.forEach(function(skill)
            { %> <%= skill %>&nbsp;&nbsp; <% })} %>
          </p>
          <p><span>Number of Openings :</span> <%= job.openings %></p>
          <p><span>Number of Applicants :</span> <%= appLength || 0 %></p>
          <button class="btn1" type="button">
            <a href="/jobs/<%= job.jobId %>/apply">Apply Now</a>
          </button>
          <%}%>
        </div>
      </div>
    </div>
  </div>
</body>
